@model DailyDolce.Web.Dtos.Cart.OrderDto

<form method="post">
    <div>
        <span style="font-size:25px;" class="text-warning">Enter details and place order :</span>
        <br />
    </div>
    <div class="border mt-2">
        <div class="container row">
            <div class="col-7">
                <div class="row">
                    <div class="col-12">
                        <label class="col-form-label">First Name:</label>
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                    <div class="col-12">
                        <label class="col-form-label">Last Name:</label>
                        <input asp-for="LastName" class="form-control" />
                    </div>
                    <div class="col-12">
                        <label class="col-form-label">Email:</label>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="col-12">
                        <label class="col-form-label">Phone:</label>
                        <input asp-for="Phone" class="form-control" />
                    </div>
                    <div class="col-12">
                        <label class="col-form-label">Delivery Date:</label>
                        <input asp-for="DeliveryDate" disabled class="form-control form-datetime" type="text">
                    </div>
                    <div class="col-12">
                        <label class="col-form-label">Card Number:</label>
                        <input asp-for="CardNumber" class="form-control" />
                    </div>

                    <div class="col-12">
                        <label class="col-form-label">CVC:</label>
                        <input asp-for="CVC" class="form-control" />
                    </div>

                    <div class="col-12 pb-4">
                        <label class="col-form-label">Expiration Date:</label>
                        <input asp-for="ExpirationDate" placeholder="MMYY" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="col-5">
                <div class="card mt-4">
                    <div class="card-body">
                        <div class=" d-none d-lg-block">
                            <div class="row text-danger">
                                <div class="col-6">
                                    Product Details
                                </div>

                                <div class="col-3">
                                    Price
                                </div>
                                <div class="col-3">
                                    Count
                                </div>
                            </div>
                        </div>
                        <hr />

                        @foreach (var product in Model.CartDto.CartProductsDto) {
                            <div class="row h-100">
                                <div class="col-6">
                                    <span style="font-size:20px">@product.Product.Name</span>
                                </div>

                                <div class="col-3" style="font-size:11px;">
                                    <span style="font-size:17px;"> @product.Product.Price.ToString("c")</span>

                                </div>
                                <div class="col-3" style="font-size:11px;">
                                    <span style="font-size:17px;"> @product.Quantity</span>
                                </div>
                            </div>
                            <hr />
                        }

                        <div class="row">
                            <div class="col-12 text-right pr-4 text-danger">
                                Order Total : @Model.CartDto.TotalOrder.ToString("c") <br />
                                @if (Model.CartDto.Discount > 0) {
                                    <span class="text-success">Order Discount: @Model.CartDto.Discount.ToString("c")</span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <div class="row">
                            <div class="col-12 ">
                                <button type="submit" class="btn btn-success form-control ">
                                    <span>Place Order</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
